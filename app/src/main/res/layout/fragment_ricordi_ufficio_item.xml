<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:padding="5dp"
                                                 android:layout_height="match_parent">
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_ricordo"
                android:scaleType="center"/>

        <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_icona"
                app:layout_constraintTop_toBottomOf="@+id/iv_ricordo"
                app:layout_constrainedWidth="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_testo"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>
        <ImageView
                app:layout_constraintLeft_toRightOf="@+id/tv_testo"
                app:layout_constraintBottom_toBottomOf="@+id/tv_testo"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/iv_icona" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>